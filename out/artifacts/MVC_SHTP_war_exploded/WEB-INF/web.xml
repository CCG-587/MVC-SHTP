<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>WaresListServlet</servlet-name>
        <servlet-class>servlet.WaresListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WaresListServlet</servlet-name>
        <url-pattern>/WaresListServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WaresQueryServlet</servlet-name>
        <servlet-class>servlet.WaresQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WaresQueryServlet</servlet-name>
        <url-pattern>/WaresQueryServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WaresDelServlet</servlet-name>
        <servlet-class>servlet.WaresDelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WaresDelServlet</servlet-name>
        <url-pattern>/WaresDelServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>